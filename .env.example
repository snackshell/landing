# SelamAI Environment Configuration
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# =============================================================================
# Environment
# =============================================================================
ENVIRONMENT=development  # development, staging, production

# =============================================================================
# API Configuration
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
CONFIG_DIR=config
ENABLE_HOT_RELOAD=false

# =============================================================================
# AI Provider Configuration
# =============================================================================
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=your-anthropic-key-here

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=selamai_db
DATABASE_USER=selamai
DATABASE_PASSWORD=your-secure-password-here

# =============================================================================
# Redis Cache Configuration
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# =============================================================================
# Security
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
ENCRYPTION_KEY=your-encryption-key-here

# =============================================================================
# Broker Credentials - MetaTrader 5
# =============================================================================
MT5_SERVER=your-broker-server.com
MT5_ACCOUNT=12345678
MT5_PASSWORD=your-mt5-password

# =============================================================================
# Broker Credentials - Interactive Brokers
# =============================================================================
IB_HOST=127.0.0.1
IB_PORT=7497
IB_CLIENT_ID=1

# =============================================================================
# Broker Credentials - Alpaca
# =============================================================================
ALPACA_API_KEY=your-alpaca-api-key
ALPACA_SECRET_KEY=your-alpaca-secret-key
ALPACA_BASE_URL=https://paper-api.alpaca.markets  # Use paper-api for testing

# =============================================================================
# Data Provider API Keys
# =============================================================================
POLYGON_API_KEY=your-polygon-api-key
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key

# =============================================================================
# Notification Services
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=noreply@selamai.com

SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# =============================================================================
# Monitoring and Logging
# =============================================================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
SENTRY_DSN=  # Optional: Sentry error tracking

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_PAPER_TRADING=true
ENABLE_LIVE_TRADING=false
ENABLE_BACKTESTING=true
