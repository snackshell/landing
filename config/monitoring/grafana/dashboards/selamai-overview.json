{
  "dashboard": {
    "title": "SelamAI Trading Platform - Overview",
    "tags": ["selamai", "trading", "overview"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Trading Metrics",
        "type": "row",
        "gridPos": {"x": 0, "y": 0, "w": 24, "h": 1}
      },
      {
        "id": 2,
        "title": "Total Trades",
        "type": "stat",
        "targets": [
          {
            "expr": "trades_total",
            "legendFormat": "Total Trades"
          }
        ],
        "gridPos": {"x": 0, "y": 1, "w": 6, "h": 4},
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "thresholds"}
          }
        }
      },
      {
        "id": 3,
        "title": "Win Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "win_rate_percent",
            "legendFormat": "Win Rate"
          }
        ],
        "gridPos": {"x": 6, "y": 1, "w": 6, "h": 4},
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 50, "color": "yellow"},
                {"value": 70, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Total P&L",
        "type": "stat",
        "targets": [
          {
            "expr": "profit_loss_total",
            "legendFormat": "Profit/Loss"
          }
        ],
        "gridPos": {"x": 12, "y": 1, "w": 6, "h": 4},
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "color": {"mode": "thresholds"}
          }
        }
      },
      {
        "id": 5,
        "title": "Drawdown",
        "type": "gauge",
        "targets": [
          {
            "expr": "drawdown_percent",
            "legendFormat": "Drawdown"
          }
        ],
        "gridPos": {"x": 18, "y": 1, "w": 6, "h": 4},
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 10, "color": "yellow"},
                {"value": 20, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 6,
        "title": "Trade Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(trades_total[5m])",
            "legendFormat": "Trades/sec"
          }
        ],
        "gridPos": {"x": 0, "y": 5, "w": 12, "h": 8},
        "yaxes": [
          {"format": "short", "label": "Trades/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 7,
        "title": "Trade Success vs Failure",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(trades_successful[5m])",
            "legendFormat": "Successful"
          },
          {
            "expr": "rate(trades_failed[5m])",
            "legendFormat": "Failed"
          }
        ],
        "gridPos": {"x": 12, "y": 5, "w": 12, "h": 8},
        "yaxes": [
          {"format": "short", "label": "Trades/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 8,
        "title": "System Metrics",
        "type": "row",
        "gridPos": {"x": 0, "y": 13, "w": 24, "h": 1}
      },
      {
        "id": 9,
        "title": "API Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(api_requests_total[5m])",
            "legendFormat": "{{method}} {{path}}"
          }
        ],
        "gridPos": {"x": 0, "y": 14, "w": 8, "h": 8},
        "yaxes": [
          {"format": "reqps", "label": "Requests/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 10,
        "title": "API Latency (p95)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(api_request_duration_seconds_bucket[5m]))",
            "legendFormat": "{{method}} {{path}}"
          }
        ],
        "gridPos": {"x": 8, "y": 14, "w": 8, "h": 8},
        "yaxes": [
          {"format": "s", "label": "Latency"},
          {"format": "short"}
        ]
      },
      {
        "id": 11,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(api_errors_total[5m])",
            "legendFormat": "{{error_type}}"
          }
        ],
        "gridPos": {"x": 16, "y": 14, "w": 8, "h": 8},
        "yaxes": [
          {"format": "short", "label": "Errors/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 12,
        "title": "Agent Metrics",
        "type": "row",
        "gridPos": {"x": 0, "y": 22, "w": 24, "h": 1}
      },
      {
        "id": 13,
        "title": "Agent Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(agent_requests_total[5m])",
            "legendFormat": "Requests/sec"
          }
        ],
        "gridPos": {"x": 0, "y": 23, "w": 12, "h": 8}
      },
      {
        "id": 14,
        "title": "Agent Response Time",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(agent_requests_duration_seconds_bucket[5m]))",
            "legendFormat": "p95"
          },
          {
            "expr": "histogram_quantile(0.50, rate(agent_requests_duration_seconds_bucket[5m]))",
            "legendFormat": "p50"
          }
        ],
        "gridPos": {"x": 12, "y": 23, "w": 12, "h": 8},
        "yaxes": [
          {"format": "s", "label": "Response Time"},
          {"format": "short"}
        ]
      },
      {
        "id": 15,
        "title": "Resource Usage",
        "type": "row",
        "gridPos": {"x": 0, "y": 31, "w": 24, "h": 1}
      },
      {
        "id": 16,
        "title": "Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "memory_usage_percent",
            "legendFormat": "Memory %"
          }
        ],
        "gridPos": {"x": 0, "y": 32, "w": 12, "h": 8},
        "yaxes": [
          {
            "format": "percent",
            "label": "Memory",
            "min": 0,
            "max": 100
          },
          {"format": "short"}
        ]
      },
      {
        "id": 17,
        "title": "CPU Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "cpu_usage_percent",
            "legendFormat": "CPU %"
          }
        ],
        "gridPos": {"x": 12, "y": 32, "w": 12, "h": 8},
        "yaxes": [
          {
            "format": "percent",
            "label": "CPU",
            "min": 0,
            "max": 100
          },
          {"format": "short"}
        ]
      }
    ]
  }
}
